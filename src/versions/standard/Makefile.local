CAMLLEX = $(CAMLBIN)ocamllex
CAMLYACC = $(CAMLBIN)ocamlyacc
CAMLPKGS = -package str -package fileutils

%.ml :  %.mll
	$(CAMLLEX) $<

%.ml %.mli :  %.mly
	$(CAMLYACC) $<

